            "expected_flow": ["acknowledge concern", "understand comparison", "highlight value", "explore options"],
            "success_metrics": ["concern acknowledged", "value demonstrated", "alternatives explored"]
          },
          {
            "objection": "Feature gap",
            "user_input": "You don't have feature X that we need",
