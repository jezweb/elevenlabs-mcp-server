{
  "customer_support_scenarios": {
    "name": "Customer Support Test Scenarios",
    "description": "Common customer support interaction patterns for testing",
    "scenarios": {
      "account_issues": {
        "name": "Account-Related Problems",
        "variations": [
          {
            "issue": "Login problems",
            "user_input": "I can't log into my account",
            "expected_flow": ["gather credentials info", "troubleshoot common issues", "escalate if needed"],
            "success_metrics": ["issue identified", "solution provided or escalated", "user satisfaction"]
          },
          {
            "issue": "Password reset",
            "user_input": "I forgot my password",
            "expected_flow": ["verify identity", "initiate reset process", "confirm completion"],
            "success_metrics": ["identity verified", "reset initiated", "user guided through process"]
          },
          {
            "issue": "Account suspension",
            "user_input": "My account has been suspended",
            "expected_flow": ["gather account info", "check suspension reason", "explain process"],
            "success_metrics": ["reason explained", "next steps clear", "appropriate escalation"]
          }
        ]
      },
      "billing_inquiries": {
        "name": "Billing and Payment Issues",
        "variations": [
          {
            "issue": "Billing dispute",
            "user_input": "I was charged incorrectly",
            "expected_flow": ["gather charge details", "review billing", "initiate resolution"],
            "success_metrics": ["details captured", "empathy shown", "resolution process started"]
          },
          {
            "issue": "Payment method update",
            "user_input": "I need to update my credit card",
            "expected_flow": ["verify identity", "guide to payment section", "confirm update"],
            "success_metrics": ["secure process", "clear instructions", "update confirmed"]
          }
        ]
      },
      "product_information": {
        "name": "Product and Service Inquiries",
        "variations": [
          {
            "issue": "Feature questions",
            "user_input": "Does your product have X feature?",
            "expected_flow": ["understand feature need", "provide accurate info", "suggest alternatives if needed"],
            "success_metrics": ["accurate information", "need understood", "helpful suggestions"]
          },
          {
            "issue": "Pricing inquiry",
            "user_input": "What are your pricing plans?",
            "expected_flow": ["understand use case", "present relevant plans", "highlight value"],
            "success_metrics": ["relevant plans shown", "value explained", "next steps offered"]
          }
        ]
      }
    }
  },
