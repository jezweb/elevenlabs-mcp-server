{
  "response_quality_validation": {
    "name": "Response Quality Validation Framework",
    "description": "Templates for evaluating the quality and appropriateness of agent responses",
    "criteria": {
      "accuracy": {
        "description": "Factual correctness and precision of information",
        "validation_points": [
          "Information is factually correct",
          "Claims are verifiable", 
          "No misleading statements",
          "Sources are reliable where applicable"
        ],
        "scoring": {
          "excellent": "All information accurate and verifiable",
          "good": "Mostly accurate with minor imprecisions",
          "fair": "Generally accurate but some unclear points",
          "poor": "Multiple inaccuracies or misleading information"
        }
      },
      "relevance": {
        "description": "How well the response addresses the user's actual question or need",
        "validation_points": [
          "Directly addresses user's question",
          "Stays on topic throughout response",
          "Provides information user is seeking",
          "Avoids unnecessary tangents"
        ],
        "scoring": {
          "excellent": "Perfectly addresses user's need",
          "good": "Mostly relevant with minor off-topic elements",
          "fair": "Somewhat relevant but includes unnecessary information",
          "poor": "Response doesn't address user's actual question"
        }
      },
      "clarity": {
        "description": "How easy the response is to understand and follow",
        "validation_points": [
          "Uses clear, understandable language",
          "Logical flow of information",
          "Appropriate level of technical detail",
          "Avoids jargon unless necessary"
        ],
        "scoring": {
          "excellent": "Crystal clear and easy to follow",
          "good": "Generally clear with minor unclear points",
          "fair": "Understandable but could be clearer",
          "poor": "Confusing or difficult to understand"
        }
      },
      "completeness": {
        "description": "Whether the response fully addresses the user's question",
        "validation_points": [
          "All aspects of question addressed",
          "Sufficient detail provided",
          "No important information omitted",
          "Follow-up guidance included where appropriate"
        ],
        "scoring": {
          "excellent": "Comprehensive and complete response",
          "good": "Mostly complete with minor gaps",
          "fair": "Adequate but missing some details",
          "poor": "Incomplete or leaves major questions unanswered"
        }
      },
      "tone_appropriateness": {
        "description": "Whether the response tone matches the context and user needs",
        "validation_points": [
          "Professional and respectful",
          "Appropriate level of formality",
          "Empathetic when dealing with problems",
          "Encouraging and helpful attitude"
        ],
        "scoring": {
          "excellent": "Perfect tone for the situation",
          "good": "Generally appropriate tone",
          "fair": "Acceptable but could be improved", 
          "poor": "Inappropriate or off-putting tone"
        }
      }
    }
  },
  "conversation_flow_validation": {
    "name": "Conversation Flow Validation",
    "description": "Templates for evaluating the natural flow and progression of conversations",
    "flow_elements": {
      "opening": {
        "description": "How well the conversation begins",
        "validation_criteria": [
          "Appropriate greeting for context",
          "Sets helpful tone",
          "Invites user to share their need",
          "Professional yet welcoming"
        ]
      },
      "information_gathering": {
        "description": "How effectively the agent gathers needed information",
        "validation_criteria": [
          "Asks relevant clarifying questions",
          "Builds on previous responses",
          "Avoids repetitive questions",
          "Demonstrates active listening"
        ]
      },
      "problem_solving": {
        "description": "How well the agent works toward resolution",
        "validation_criteria": [
          "Systematic approach to problem solving",
          "Uses available tools appropriately",
          "Explains reasoning when helpful",
          "Adapts approach based on user feedback"
        ]
      },
      "transitions": {
        "description": "How smoothly the conversation moves between topics",
        "validation_criteria": [
          "Natural topic transitions",
          "Acknowledges topic changes",
          "Maintains context across transitions",
          "No jarring subject shifts"
        ]
      },
      "closing": {
        "description": "How well the conversation concludes",
        "validation_criteria": [
          "Summarizes key points or resolution",
          "Confirms user satisfaction",
          "Provides clear next steps if needed",
          "Professional and complete closure"
        ]
      }
    }
  },
  "technical_validation": {
    "name": "Technical Performance Validation",
    "description": "Templates for validating technical aspects of agent performance",
    "metrics": {
      "response_time": {
        "description": "Speed of agent responses",
        "thresholds": {
          "excellent": "< 1 second",
          "good": "1-2 seconds",
          "acceptable": "2-3 seconds",
          "poor": "> 3 seconds"
        },
        "considerations": [
          "Complexity of query affects acceptable time",
          "Tool usage may extend response time",
          "Consistency more important than single fast responses"
        ]
      },
      "tool_usage": {
        "description": "Appropriate use of available tools and integrations",
        "validation_points": [
          "Uses tools when appropriate",
          "Doesn't overuse or misuse tools", 
          "Handles tool failures gracefully",
          "Interprets tool results correctly"
        ]
      },
      "knowledge_access": {
        "description": "Effective use of knowledge base and training data",
        "validation_points": [
          "Accesses relevant knowledge",
          "Combines information effectively",
          "Acknowledges knowledge limitations",
          "Seeks additional info when needed"
        ]
      },
      "error_handling": {
        "description": "How well the agent handles errors and unexpected situations",
        "validation_points": [
          "Graceful error recovery",
          "Clear error communication to user",
          "Appropriate escalation when needed",
          "Maintains helpful attitude despite errors"
        ]
      }
    }
  },
  "business_outcome_validation": {
    "name": "Business Outcome Validation",
    "description": "Templates for measuring business-relevant outcomes of agent interactions",
    "outcomes": {
      "customer_satisfaction": {
        "description": "How satisfied the user is with the interaction",
        "measurement_methods": [
          "Direct feedback ratings",
          "Follow-up survey responses",
          "Repeat usage patterns",
          "Escalation avoidance"
        ],
        "success_indicators": [
          "Rating of 4/5 or higher",
          "Positive qualitative feedback",
          "No immediate follow-up complaints",
          "User returns for future interactions"
        ]
      },
      "issue_resolution": {
        "description": "Whether the user's problem or question was resolved",
        "measurement_methods": [
          "Resolution confirmation in conversation",
          "Follow-up contact patterns",
          "Escalation requirements",
          "Time to resolution"
        ],
        "success_indicators": [
          "User confirms resolution",
          "No repeat contacts for same issue",
          "Resolution achieved without human escalation",
          "Resolution time within targets"
        ]
      },
      "efficiency": {
        "description": "How efficiently the interaction achieved its goals",
        "measurement_methods": [
          "Conversation duration",
          "Number of exchanges required",
          "First-contact resolution rate",
          "Resource utilization"
        ],
        "success_indicators": [
          "Resolution in minimal exchanges",
          "No unnecessary back-and-forth",
          "Efficient use of tools and knowledge",
          "Time-to-resolution within targets"
        ]
      },
      "conversion_goals": {
        "description": "Achievement of business conversion objectives",
        "measurement_methods": [
          "Lead qualification completion",
          "Trial sign-ups initiated",
          "Sales meetings scheduled",
          "Contact information captured"
        ],
        "success_indicators": [
          "Qualified lead criteria met",
          "User advances in sales funnel",
          "Contact information provided willingly",
          "Positive sentiment toward products/services"
        ]
      }
    }
  },
  "compliance_validation": {
    "name": "Compliance and Policy Validation",
    "description": "Templates for ensuring agent behavior complies with policies and regulations",
    "compliance_areas": {
      "privacy_protection": {
        "description": "Adherence to privacy policies and data protection",
        "validation_points": [
          "No unnecessary personal information collection",
          "Proper handling of sensitive data",
          "Clear privacy policy communication",
          "User consent obtained when required"
        ]
      },
      "regulatory_compliance": {
        "description": "Adherence to industry-specific regulations",
        "validation_points": [
          "No unauthorized financial advice (if applicable)",
          "Proper medical disclaimers (if applicable)", 
          "Age-appropriate interactions",
          "Accessibility considerations"
        ]
      },
      "company_policy": {
        "description": "Adherence to internal company policies",
        "validation_points": [
          "Consistent with brand voice and values",
          "Follows escalation procedures",
          "Respects service boundaries",
          "Maintains professional standards"
        ]
      }
    }
  }
}